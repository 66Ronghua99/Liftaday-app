<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/tv_clothes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clothes"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="30dp"/>


        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/male_coat"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:src="@drawable/jacket_10_20"/>
            <ImageView
                android:id="@+id/female_coat"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:src="@drawable/coat_10_20"
                android:layout_toRightOf="@+id/male_coat"
                android:layout_marginLeft="17sp"/>
            <ImageView
                android:id="@+id/sweater_male"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:src="@drawable/dress_10_20"
                android:layout_toRightOf="@+id/female_coat"
                android:layout_marginLeft="17sp"/>
            <ImageView
                android:id="@+id/sweater_female"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:src="@drawable/shirt_10_20"
                android:layout_toRightOf="@+id/sweater_male"
                android:layout_marginLeft="17sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/pants"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:src="@drawable/pants_10_20"/>
            <ImageView
                android:id="@+id/shose_male"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:src="@drawable/shoe_10_20"
                android:layout_toRightOf="@+id/pants"
                android:layout_marginLeft="17sp"/>
            <ImageView
                android:id="@+id/shose_female"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:src="@drawable/high_heel"
                android:layout_toRightOf="@+id/shose_male"
                android:layout_marginLeft="17sp"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_accessories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accessories"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:textSize="30sp"/>
        <RelativeLayout
            android:layout_width="330sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/necklace"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:layout_marginLeft="20sp"
                android:src="@drawable/necklace"/>
            <ImageView
                android:id="@+id/earring"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:src="@drawable/earring"
                android:layout_toRightOf="@+id/necklace"
                android:layout_marginLeft="17sp"/>
            <ImageView
                android:id="@+id/handbag"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/handbag"
                android:layout_toRightOf="@+id/earring"
                android:layout_marginLeft="17sp"/>
            <ImageView
                android:id="@+id/watch"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:src="@drawable/watch"
                android:layout_toRightOf="@+id/handbag"
                android:layout_marginLeft="17sp"/>

        </RelativeLayout>
    </LinearLayout>


</ScrollView>
