<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/tv_clothes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clothes"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="30dp"/>


        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/male_coat"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/coat_male"/>
            <ImageView
                android:id="@+id/female_coat"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/coat_female"
                android:layout_toRightOf="@+id/male_coat"
                android:layout_marginLeft="17dp"/>
            <ImageView
                android:id="@+id/sweater_male"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/sweater_male"
                android:layout_toRightOf="@+id/female_coat"
                android:layout_marginLeft="17dp"/>
            <ImageView
                android:id="@+id/sweater_female"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/sweater_female"
                android:layout_toRightOf="@+id/sweater_male"
                android:layout_marginLeft="17dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/pants"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/pants_male"/>
            <ImageView
                android:id="@+id/shose_male"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/shoes_male"
                android:layout_toRightOf="@+id/pants"
                android:layout_marginLeft="17dp"/>
            <ImageView
                android:id="@+id/shose_female"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/shoes_female"
                android:layout_toRightOf="@+id/shose_male"
                android:layout_marginLeft="17dp"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_accessories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accessories"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="30dp"/>
        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/hat"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="50sp"
                android:src="@drawable/hat" />

            <ImageView
                android:id="@+id/gloves"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/gloves"
                android:layout_toRightOf="@+id/hat"
                android:layout_marginLeft="17dp"/>
            <ImageView
                android:id="@+id/scarf"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/scarf"
                android:layout_toRightOf="@+id/gloves"
                android:layout_marginLeft="17dp"/>

        </RelativeLayout>
    </LinearLayout>


</ScrollView>
